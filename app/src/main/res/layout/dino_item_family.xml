<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_famili_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Ikon Family Dinosaurus"
            app:srcCompat="@drawable/tyrannosauridarmv" /> <!-- Ganti dengan default ikon Family -->

        <TextView
            android:id="@+id/txt_famili_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Famili dinosaurus"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
